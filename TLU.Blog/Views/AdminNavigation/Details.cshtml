@model TLU.Blog.Models.DataBase.Navigation
@using TLU.Blog.Models.DataModels;
@{
    ViewBag.Page = "Navigation";
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Header{
    @ViewBag.Page
}
@section Title{
    @ViewBag.Title
}
<div>
    <h4>Navigation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Code)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Code)
        </dd>


        @if (Model.Icon != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Icon)
            </dt>
            <dd>
                <img src="@Model.Icon" style="width:25%" />
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Link)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Link)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderDisplay)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDisplay)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>

        <dd>
            @(new HistoryModel().GetNameAccountById(Model.CreatedBy))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EditBy)
        </dt>

        <dd>
            @(new HistoryModel().GetNameAccountById(Model.EditBy))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EditDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EditDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        @if (Model.IsActive == null)
        {
            <dd>Chưa Kích Hoạt</dd>
        }
        else
        {
            <dd>Đã Kích Hoạt</dd>
        }

        @if (Model.LangId == 0)
        {
            <dd>Tiếng Việt</dd>
        }
        else
        {
            <dd>Tiếng Anh</dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
