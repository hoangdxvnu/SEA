@model PagedList.PagedList<TLU.Blog.Models.DataBase.Navigation>
@using PagedList.Mvc;
@using TLU.Blog.Models.DataModels;
@{
    ViewBag.Page = "Navigation";
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section Header{
    @ViewBag.Page
}
@section Title{
    @ViewBag.Title
}
<div class="col-xs-12">

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Navigation</h3>
            <div>
                <div class="box-header with-border">
                    @Html.ActionLink("Create", "Create", "AdminNavigation")
                    <div class="box-tools pull-right">
                        <div class="has-feedback">
                            <input type="text" class="form-control input-sm" placeholder="Search Mail">
                            <span class="glyphicon glyphicon-search form-control-feedback"></span>
                        </div>
                    </div><!-- /.box-tools -->
                </div><!-- /.box-header -->
            </div>
        </div>
        <div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Link</th>
                            <th>Ví Chí </th>
                            <th>Trang Thái</th>
                            <th>Ngôn Ngữ</th>
                            <th style="width: 131px;">Tool</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    @item.Link
                                </td>
                                <td>@item.OrderDisplay</td>
                                @if (item.IsActive == true)
                                {
                                    <td>Đã Kích Hoạt</td>
                                }
                                else
                                {
                                    <td>Chưa Kích Hoạt</td>
                                }
                                @if(item.LangId==0)
                                {
                                    <td>Tiếng Việt</td>
                                }
                                else
                                {
                                    <td>Tiếng Anh</td>
                                }
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID })|
                                    @Html.ActionLink("Details", "Details", new { id = item.ID })|
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
            </div>
        </div><!-- /.box-body -->
    </div><!-- /.box -->
</div>

