@model TLU.Blog.Models.DataBase.Topic
@using TLU.Blog.Models.DataModels;
@{
    ViewBag.Page = "Topic";
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Header{
    @ViewBag.Page
}
@section Title{
    @ViewBag.Title
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Topic</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Code)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Code)
        </dd>
        @if (Model.ImageId != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.ImageId)
            </dt>
            <dd>
                <img src="@Model.ImageId" style="width:25%" />
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Descrip)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descrip)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderDisplay)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDisplay)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TopicParentID)
        </dt>

        <dd>
            @(new TopicModel().GetNameById(Model.TopicParentID))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>

        <dd>
            @(new HistoryModel().GetNameAccountById(Model.CreatedBy))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EditBy)
        </dt>

        <dd>
            @(new HistoryModel().GetNameAccountById(Model.CreatedBy))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EditDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EditDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        @if(Model.IsActive==null)
        {
            <dd>Chưa Kích Hoạt</dd>
        }
        else
        {
            <dd>Đã Kích Hoạt</dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.LangId)
        </dt>

        
        @if(Model.LangId==0)
        {
            <dd>Tiếng Việt</dd>
        }
        else
        {
            <dd>Tiếng Anh</dd>
        }

    </dl>

    @using (Html.BeginForm("Delete", "AdminTopic",new { id=Model.ID })) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
